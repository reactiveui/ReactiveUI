<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>uap10.0;caboodlearin.iOS10;MonoAndroid80;netstandard1.0</TargetFrameworks>
    <AssemblyName>ReactiveUI.Events.Caboodle</AssemblyName>
    <RootNamespace>ReactiveUI.Events</RootNamespace>
    <Description>Provides Observable-based events API for Caboodlearin Caboodle UI controls/eventhandlers. The contents of this package is automatically generated, please target pull-requests to the code generator.</Description>
    <PackageId>ReactiveUI.Events.Caboodle</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="*.cs" />
    <None Include="*.cs" />
    <Compile Include="../ReactiveUI.Events/SingleAwaitSubject.cs" />
    <PackageReference Include="System.Reactive" Version="[3.1.1,4)" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard1.0' ">
    <Compile Include="Events_Caboodle.cs" Condition="Exists('Events_Caboodle.cs')" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'caboodlearin.iOS10' ">
    <Compile Include="Events_Caboodle_IOS.cs" Condition="Exists('Events_Caboodle_IOS.cs')" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'caboodlearin.MonoAndroid80' ">
    <Compile Include="Events_Caboodle_ANDROID.cs" Condition="Exists('Events_Caboodle_ANDROID.cs')" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'uap10.0' ">
    <Compile Include="Events_Caboodle_UAP.cs" Condition="Exists('Events_Caboodle_UAP.cs')" />
    <SDKReference Include="WindowsDesktop, Version=10.0.14393.0">
      <Name>Windows Desktop Extensions for the UWP</Name>
    </SDKReference>
    <SDKReference Include="WindowsMobile, Version=10.0.14393.0">
      <Name>Windows Mobile Extensions for the UWP</Name>
    </SDKReference>
  </ItemGroup>

  <Import Project="$(MSBuildSDKExtrasTargets)" Condition="Exists('$(MSBuildSDKExtrasTargets)')" />
</Project>