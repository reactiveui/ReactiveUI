<Project Sdk="MSBuild.Sdk.Extras">
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <AssemblyName>ReactiveUI.Events.XamForms</AssemblyName>
    <RootNamespace>ReactiveUI.Events</RootNamespace>
    <PackageDescription>Provides Observable-based events API for Xamarin Forms UI controls &amp; event handlers</PackageDescription>
    <PackageId>ReactiveUI.Events.XamForms</PackageId>
    <NoWarn>$(NoWarn);CS1570;CA1812</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Xamarin.Forms" Version="4.7.*" />
    <PackageReference Include="Pharmacist.MsBuild" Version="2.*" PrivateAssets="all" />
    <PackageReference Include="Pharmacist.Common" Version="2.*" />
   </ItemGroup>
</Project>
