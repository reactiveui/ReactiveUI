<Project Sdk="MSBuild.Sdk.Extras">
  <PropertyGroup>
    <TargetFrameworks>net461;net462;net47;net471;net472;net48;netcoreapp3.1;net5.0-windows</TargetFrameworks>
    <RootNamespace>ReactiveUI.Events</RootNamespace>
    <PackageDescription>Provides Observable-based events API for WPF UI controls &amp; event handlers</PackageDescription>
    <PackageId>ReactiveUI.Events.WPF</PackageId>
    <UseWpf>true</UseWpf>
    <UseWindowsForms>true</UseWindowsForms>
    <NoWarn>$(NoWarn);CS1570;CA1812</NoWarn>
  </PropertyGroup>  

  <ItemGroup>
    <Compile Remove="*.cs" />
    <None Include="*.cs" />
    <PackageReference Include="Pharmacist.Common" Version="1.*" />
  </ItemGroup>

  <ItemGroup>
      <PackageReference Include="System.Reactive" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework) == 'net461' ">
    <Compile Include="Events_net461.cs" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework) == 'net462' ">
    <Compile Include="Events_net462.cs" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework) == 'net47' ">
    <Compile Include="Events_net47.cs" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework) == 'net471' ">
    <Compile Include="Events_net471.cs" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework) == 'net472' ">
    <Compile Include="Events_net472.cs" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework) == 'net48' ">
    <Compile Include="Events_net48.cs" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework) == 'netcoreapp3.1' ">
    <Compile Include="Events_netcoreapp3.1.cs" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework) == 'net5.0-windows' ">
    <Compile Include="Events_net5.0.cs" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('net4')) ">
    <Reference Include="System.Xaml" />
    <Reference Include="PresentationCore" />
    <Reference Include="PresentationFramework" />
    <Reference Include="PresentationFramework.Aero" />
    <Reference Include="WindowsBase" />
  </ItemGroup>
</Project>
