<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
      <TargetFramework>net6.0</TargetFramework>
      <Nullable>enable</Nullable>
      <AssemblyName>ReactiveUI.Events.Maui</AssemblyName>
      <RootNamespace>ReactiveUI.Events</RootNamespace>
      <PackageDescription>Provides Observable-based events API for Maui UI controls &amp; event handlers</PackageDescription>
      <PackageId>ReactiveUI.Events.Maui</PackageId>
      <NoWarn>$(NoWarn);CS1570;CA1812</NoWarn>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Maui.Controls" Version="6.0.100-preview.*" />
      <PackageReference Include="Pharmacist.MsBuild" Version="2.*" PrivateAssets="all" />
      <PackageReference Include="Pharmacist.Common" Version="2.*" />
    </ItemGroup>
</Project>
