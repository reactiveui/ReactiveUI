<Project Sdk="MSBuild.Sdk.Extras">
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <AssemblyName>ReactiveUI.Events.XamEssentials</AssemblyName>
    <RootNamespace>ReactiveUI.Events</RootNamespace>
    <PackageDescription>Provides a wrapper aroung XamarinEssentials, allowing you to use Observables instead of events</PackageDescription>
    <PackageId>ReactiveUI.Events.XamEssentials</PackageId>
    <NoWarn>$(NoWarn);CS1570;CA1812</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Xamarin.Essentials" Version="1.*" />
    <PackageReference Include="Pharmacist.MsBuild" Version="1.*" PrivateAssets="all" />
    <PackageReference Include="Pharmacist.Common" Version="1.*" />
  </ItemGroup>
</Project>
