<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>$(ReactiveUITestingUITargets)</TargetFrameworks>
    <OutputType>Exe</OutputType>
    <NoWarn>$(NoWarn);CS1591</NoWarn>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\ReactiveUI.Testing\ReactiveUI.Testing.csproj" />
    <ProjectReference Include="..\..\ReactiveUI.Drawing\ReactiveUI.Drawing.csproj" />
  </ItemGroup>
  <!-- Link shared infrastructure files from ReactiveUI.Tests -->
  <ItemGroup>
    <Compile Include="..\ReactiveUI.Tests\Infrastructure\**\*.cs" Link="Infrastructure\%(RecursiveDir)%(Filename)%(Extension)" />
    <Compile Include="..\ReactiveUI.Tests\Utilities\**\*.cs" Link="Utilities\%(RecursiveDir)%(Filename)%(Extension)" />
    <Compile Include="..\ReactiveUI.Tests\Mocks\**\*.cs" Link="Mocks\%(RecursiveDir)%(Filename)%(Extension)" />
  </ItemGroup>
  <!-- Exclude platform files by default -->
  <ItemGroup>
    <Compile Remove="Platforms\**\*.cs" />
    <None Include="Platforms\**\*.cs" />
  </ItemGroup>
  <!-- Platform-specific includes -->
  <Choose>
    <When Condition=" $(TargetFramework.EndsWith('-windows10.0.19041.0')) ">
      <PropertyGroup>
        <UseWpf>true</UseWpf>
        <UseWindowsForms>true</UseWindowsForms>
      </PropertyGroup>
      <ItemGroup>
        <ProjectReference Include="..\..\ReactiveUI.Winforms\ReactiveUI.Winforms.csproj" />
        <ProjectReference Include="..\..\ReactiveUI.Wpf\ReactiveUI.Wpf.csproj" />
        <ProjectReference Include="..\..\ReactiveUI.Blend\ReactiveUI.Blend.csproj" />
        <Compile Include="Platforms\common-gui\**\*.cs" />
        <Compile Include="Platforms\wpf\**\*.cs" />
        <Compile Include="Platforms\Winforms\**\*.cs" />
        <Compile Include="Platforms\windows-xaml\**\*.cs" />
      </ItemGroup>
    </When>
    <When Condition=" $(TargetFramework.StartsWith('net4'))">
      <PropertyGroup>
        <UseWpf>true</UseWpf>
        <UseWindowsForms>true</UseWindowsForms>
      </PropertyGroup>
      <ItemGroup>
        <ProjectReference Include="..\..\ReactiveUI.Winforms\ReactiveUI.Winforms.csproj" />
        <ProjectReference Include="..\..\ReactiveUI.Wpf\ReactiveUI.Wpf.csproj" />
        <ProjectReference Include="..\..\ReactiveUI.Blend\ReactiveUI.Blend.csproj" />
        <PackageReference Include="System.ValueTuple" />
        <Compile Include="Platforms\common-gui\**\*.cs" />
        <Compile Include="Platforms\wpf\**\*.cs" />
        <Compile Include="Platforms\Winforms\**\*.cs" />
        <Compile Include="Platforms\windows-xaml\**\*.cs" />
      </ItemGroup>
    </When>
  </Choose>

  <ItemGroup>
    <Compile Include="..\ReactiveUI.Tests\WhenAny\Mockups\**\*.cs" LinkBase="WhenAny" />
    <Compile Include="..\ReactiveUI.Tests\ReactiveObject\Mocks\**\*.cs" LinkBase="ReactiveObject" />
    <Compile Include="..\ReactiveUI.Tests.Core\Locator\Mocks\**\*.cs" LinkBase="Locator" />
  </ItemGroup>
  
  <!-- Platform-specific file handling -->
  <ItemGroup>
    <None Remove="Platforms\wpf\Mocks\CanExecuteMock\AlwaysFalseModeDetector.cs" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="Platforms\Winforms\Mocks\TestForm.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>TestForm.resx</DependentUpon>
    </Compile>
    <Compile Update="Platforms\Winforms\Mocks\TestFormNotCanActivate.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Platforms\Winforms\Mocks\TestFormNotCanActivate.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>TestFormNotCanActivate.resx</DependentUpon>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <Page Update="Platforms\wpf\Mocks\CanExecuteMock\CanExecuteExecutingView.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
    </Page>
  </ItemGroup>
  <!-- Global usings -->
  <ItemGroup>
    <Using Include="Splat" />
    <Using Include="System" />
    <Using Include="System.Collections.Generic" />
    <Using Include="System.ComponentModel" />
    <Using Include="System.Diagnostics.CodeAnalysis" />
    <Using Include="System.Linq" />
    <Using Include="System.Linq.Expressions" />
    <Using Include="System.Reactive" />
    <Using Include="System.Reactive.Concurrency" />
    <Using Include="System.Reactive.Disposables" />
    <Using Include="System.Reactive.Linq" />
    <Using Include="System.Reactive.Subjects" />
    <Using Include="System.Reactive.Threading.Tasks" />
    <Using Include="System.Threading" />
    <Using Include="System.Threading.Tasks" />
  </ItemGroup>
</Project>
