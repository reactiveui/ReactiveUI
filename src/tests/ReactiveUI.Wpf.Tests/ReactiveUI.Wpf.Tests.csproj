<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>$(ReactiveUITestingUITargets)</TargetFrameworks>
    <OutputType>Exe</OutputType>
    <NoWarn>$(NoWarn);CS1591</NoWarn>
    <RootNamespace>ReactiveUI.Tests</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\ReactiveUI.TestGuiMocks\ReactiveUI.TestGuiMocks.csproj" />
    <ProjectReference Include="..\ReactiveUI.Tests\ReactiveUI.Tests.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="**\*.cs" />
    <None Include="**\*.cs" />
    <!-- Include cross-platform sanity tests for all platforms -->
    <Compile Include="SanityTests.cs" />
  </ItemGroup>

  <Choose>
    <When Condition=" $(TargetFramework.EndsWith('-windows10.0.19041.0')) ">
      <PropertyGroup>
        <UseWpf>true</UseWpf>
        <UseWindowsForms>true</UseWindowsForms>
      </PropertyGroup>
      <ItemGroup>
        <ProjectReference Include="..\..\ReactiveUI.Wpf\ReactiveUI.Wpf.csproj" />
        <ProjectReference Include="..\..\ReactiveUI.Blend\ReactiveUI.Blend.csproj" />
        <Compile Include="..\ReactiveUI.NonParallel.Tests\Locator\Mocks\*.cs" Exclude="..\ReactiveUI.NonParallel.Tests\Locator\Mocks\Routable*.cs;..\ReactiveUI.NonParallel.Tests\Locator\Mocks\IRoutable*.cs" Link="Shared\Mocks\%(Filename)%(Extension)" />
        <Compile Include="..\ReactiveUI.NonParallel.Tests\Mixins\LoggingRegistrationScope.cs" Link="Shared\Infrastructure\LoggingRegistrationScope.cs" />
        <Compile Include="Wpf\**\*.cs" />
        <Compile Include="Xaml\**\*.cs" />
        <Compile Include="AssemblyHooks.cs" />
        <Compile Include="AssemblyInfo.Parallel.cs" />
        <Page Update="Wpf\Mocks\CanExecuteMock\CanExecuteExecutingView.xaml">
          <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
        </Page>
      </ItemGroup>
    </When>
  </Choose>

  <!-- Global usings -->
  <ItemGroup>
    <Using Include="ReactiveUI" />
    <Using Include="ReactiveUI.Builder" />
    <Using Include="Splat" />
    <Using Include="System" />
    <Using Include="System.Collections.Generic" />
    <Using Include="System.ComponentModel" />
    <Using Include="System.Diagnostics.CodeAnalysis" />
    <Using Include="System.Linq" />
    <Using Include="System.Linq.Expressions" />
    <Using Include="System.Reactive" />
    <Using Include="System.Reactive.Concurrency" />
    <Using Include="System.Reactive.Disposables" />
    <Using Include="System.Reactive.Disposables.Fluent" />
    <Using Include="System.Reactive.Linq" />
    <Using Include="System.Reactive.Subjects" />
    <Using Include="System.Reactive.Threading.Tasks" />
    <Using Include="System.Threading" />
    <Using Include="System.Threading.Tasks" />
  </ItemGroup>
</Project>
